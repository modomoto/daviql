.container
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f|
    %h2.form-signin-heading
      Please sign in
    .form-group
      .field
        = f.label :email, class: "sr-only"
        = f.email_field :email, autofocus: true, class: "form-control", required: true, placeholder: "email"
    .form-group
      .field
        = f.label :password, class: "sr-only"
        = f.password_field :password, autocomplete: "off", class: "form-control", required: true, placeholder: "password"
    - if devise_mapping.rememberable?
      .checkbox
        %label
          = f.check_box :remember_me
          = "Remeber me"
    = f.button "Log in", class: "btn btn-lg btn-primary btn-block"
    = render "devise/shared/links"
