.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f|
    %h2.form-signin-heading
      Sign up
    .form-group
      .field
        = f.label :email, class: "sr-only"
        = f.email_field :email, autofocus: true, class: "form-control", required: true, placeholder: "email"
    .form-group
      .field
        = f.label :password, class: "sr-only"
        = f.password_field :password, autocomplete: "off", class: "form-control", required: true, placeholder: "password"
    .form-group
      .field
        = f.label :password_confirmation, class: "sr-only"
        = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true, placeholder: "password confirmation"
    = f.button "Sign up", class: "btn btn-lg btn-primary btn-block"
    = render "devise/shared/links"
